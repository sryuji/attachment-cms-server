{
  "name": "attachment-cms-server",
  "version": "0.1.0",
  "description": "",
  "author": "sryuji",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.types.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "yarn orm:migrate && node dist/src/app/main.js",
    "lint": "yarn run lint:es",
    "lint:es": "eslint --ext .js,.ts .",
    "test": "node --trace-warnings node_modules/.bin/jest --unhandled-rejections=strict",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "test:debug": "node --inspect-brk --trace-warnings -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles --unhandled-rejections=strict",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm": "yarn run ts ./node_modules/.bin/typeorm",
    "orm:generate": "yarn run orm migration:generate",
    "orm:migrate": "yarn run orm migration:run",
    "orm:rollback": "yarn run orm migration:revert",
    "orm:tables": "yarn run orm query \"select name from sqlite_master where type = 'table'\"",
    "orm:drop": "yarn run orm schema:drop",
    "ts": "node --trace-warnings --unhandled-rejections=strict ./node_modules/.bin/ts-node -r tsconfig-paths/register",
    "repl": "yarn run ts -r ./src/command/repl",
    "command": "yarn run ts ./src/command/runner.ts",
    "seed": "yarn run command seed-runner",
    "seed:dev": "NODE_ENV=development yarn run seed account scope account-scope release content-history plugin",
    "seed:test": "NODE_ENV=test yarn run seed account scope account-scope release content-history plugin",
    "seed:prod": "NODE_ENV=production yarn run seed scope"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/typeorm": "^8.0.2",
    "@sendgrid/mail": "^7.6.0",
    "@sentry/integrations": "^6.14.1",
    "@sentry/node": "^6.14.1",
    "@sentry/tracing": "^6.14.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.16.0",
    "@types/node": "^16.11.6",
    "@types/passport-google-oauth20": "^2.0.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/uuid": "^8.3.1",
    "@types/validator": "^13.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.24.0",
    "dom-serializer": "^1.3.2",
    "domhandler": "^4.2.2",
    "dotenv": "^10.0.0",
    "htmlparser2": "^7.2.0",
    "passport": "^0.5.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tslib": "^2.3.1",
    "typeorm": "^0.2.40",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.1.2",
    "@types/jest": "^27.0.1",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.0.2",
    "ts-jest": "^27.0.5"
  },
  "browserslist": [
    "> 1% in JP"
  ]
}
