{
  "name": "attachment-cms-server",
  "version": "0.0.1",
  "description": "",
  "author": "sryuji",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "buildDts": "tsc -p tsconfig.dts.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "yarn run lint:es",
    "lint:es": "eslint --ext .js,.ts .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm": "yarn run ts ./node_modules/.bin/typeorm",
    "orm:generate": "yarn run orm migration:generate",
    "orm:migrate": "yarn run orm migration:run",
    "orm:rollback": "yarn run orm migration:revert",
    "orm:tables": "yarn run orm query \"select name from sqlite_master where type = 'table'\"",
    "orm:drop": "yarn run orm schema:drop",
    "ts": "node --trace-warnings --unhandled-rejections=strict ./node_modules/.bin/ts-node -r tsconfig-paths/register",
    "repl": "yarn run ts -r ./src/command/repl",
    "command": "yarn run ts ./src/command/runner.ts",
    "seed": "yarn run command seed-runner",
    "seed:dev": "NODE_ENV=development yarn run seed account scope account-scope release content-history",
    "seed:test": "NODE_ENV=test yarn run seed account scope account-scope release content-history"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/typeorm": "^8.0.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.24.0",
    "dotenv": "^10.0.0",
    "passport": "^0.5.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "sqlite3": "^5.0.2",
    "typeorm": "0.2.38",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/testing": "^8.1.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.6",
    "@types/passport-google-oauth20": "^2.0.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.7.0",
    "typescript": "~4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "browserslist": [
    "> 1% in JP"
  ]
}
